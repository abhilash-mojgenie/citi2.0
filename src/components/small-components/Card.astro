---
const { title, src, bg } = Astro.props;
---

<div
  class={` py-[61px] w-full md:w-[625px] flex flex-col justify-center items-center rounded-[15px] ${bg}`}
>
  <div class="flex flex-col justify-center items-center gap-[26px]">
    <img
      src={src}
      alt=""
      class="xl:h-[93px] xl:w-[92px] md:h-[70px] md:w-[70px] h-[53px] w-[53px]"
    />
    <p
      class="font-medium text-[20px] md:text-[26px] xl:text-[32px] text-[white]"
    >
      {title}
    </p>
  </div>
</div>
